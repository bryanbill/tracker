{{#block "header"}}
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>{{#block "title"}}Home{{/block}}
        </title>
        <meta charset="UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no"/>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" rel="stylesheet"/>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
        <link rel="stylesheet" href="/css/style.css"/>
    </head>
    <body>
{{/block}}

<!-- begin inner template-->
<div class="h-100 w-100">
    {{#block "content"}}
    {{/block}}
    <div class="modal fade" id="animalCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create Animal</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="animalName">Animal Name</label>
                            <input type="text" class="form-control" id="animalName" placeholder="Enter Animal Name"/>
                        </div>
                        <div class="form-group">
                            <label for="animalType">Animal Type</label>
                            <input type="text" class="form-control" id="animalType" placeholder="Enter Animal Type"/>
                        </div>
                        <div class="form-group">
                            <label for="age">Age</label>
                            <input type="text" class="form-control" id="age" placeholder="Enter Age"/>
                        </div>
                        <div class="form-group">
                            <label for="health">Health</label>
                            <input type="text" class="form-control" id="health" placeholder="Enter Health"/>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="sightingCreate" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Create Sighting</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="animalName">Animal Name</label>
                            <input type="text" class="form-control" id="animalName" placeholder="Enter Animal Name"/>
                        </div>
                        <div class="form-group">
                            <label for="animalType">Location</label>
                            <input type="text" class="form-control" id="animalType" placeholder="Enter Animal Type"/>
                        </div>

                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- end inner template-->
