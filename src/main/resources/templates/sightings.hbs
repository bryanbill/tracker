{{#partial "username"}}
    {{user.fullName}}!
{{/partial}}
{{#partial "dashboard"}}

    <div class="my-4">
        <h4>Sightings</h4>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Total Sightings</h5>
                    <p class="card-text">{{totalSightings}}</p>
                </div>
            </div>
        </div>
    </div>

    <div class="my-4 d-flex w-100 justify-content-between">
        <h4>Recents - Sightings</h4>
        <button class="btn btn btn-outline-dark" data-toggle="modal" data-target="#sightingCreate">Add Sighting</button>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Location</th>
                        <th scope="col">Animal Name</th>
                        <th scope="col">Ranger</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#if sightings}}
                        {{#each sightings}}
                            <tr>
                                <td >{{id}}</td>
                                <td>{{loc}}</td>
                                <td>{{animalId}}</td>
                                <td>{{rangerId}}</td>
                                <td>
                                    <button class="btn btn-outline-danger">Delete</button>
                                </td>
                            </tr>

                        {{/each}}
                    {{else}}
                        <tr>
                            <td colspan="5">No sighting found</td>
                        </tr>
                    {{/if}}

                    </tbody>
                </table>


            </div>
        </div>
    </div>

{{/partial}}
{{> dashboard.hbs}}